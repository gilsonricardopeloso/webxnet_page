{
  "compilerOptions": {
    "outDir": "../dist/backend",
    "rootDir": "./",
    "module": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "composite": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["../node_modules", "../dist"]
}
